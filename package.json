{
    "name": "trip-it",
    "type": "module",
    "version": "0.0.1",
    "scripts": {
        "dev": "astro dev",
        "build": "astro build",
        "preview": "astro build && wrangler pages dev --d1 trip-it",
        "astro": "astro",
        "deploy": "astro build && wrangler pages deploy",
        "cf-typegen": "wrangler types",
        "db:seed:local": "tsx ./src/db/seed.ts",
        "db:generate": "drizzle-kit generate:sqlite",
        "db:migrate:local": "drizzle-kit push:sqlite",
        "db:migrate:preview": "wrangler d1 migrations apply trip-it --local",
        "db:migrate:prod": "wrangler d1 migrations apply trip-it --remote"
    },
    "dependencies": {
        "@astrojs/check": "0.9.4",
        "@astrojs/cloudflare": "12.4.0",
        "@auth/core": "0.37.3",
        "astro": "5.6.1",
        "auth-astro": "4.2.0",
        "drizzle-orm": "0.41.0",
        "typescript": "5.8.2"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "4.20250404.0",
        "@types/better-sqlite3": "7.6.13",
        "@types/node": "20.12.10",
        "better-sqlite3": "11.9.1",
        "cross-env": "7.0.3",
        "drizzle-kit": "0.30.6",
        "tsx": "4.19.3",
        "wrangler": "4.7.2"
    }
}
