{
    "name": "trip-it",
    "type": "module",
    "version": "0.0.1",
    "scripts": {
        "dev": "astro dev",
        "build": "astro build",
        "preview": "astro build && wrangler pages dev --d1 DB",
        "astro": "astro",
        "deploy": "astro build && wrangler pages deploy",
        "cf-typegen": "wrangler types",
        "db:seed:local": "tsx ./src/db/seed.ts",
        "db:generate": "LOCAL_DB_PATH=local.sqlite drizzle-kit generate:sqlite",
        "db:migrate:local": "LOCAL_DB_PATH=local.sqlite drizzle-kit push:sqlite",
        "db:migrate:preview": "wrangler d1 migrations apply trip-it --local",
        "db:migrate:prod": "wrangler d1 migrations apply trip-it --remote"
    },
    "dependencies": {
        "@astrojs/check": "0.5.10",
        "@astrojs/cloudflare": "10.2.5",
        "@auth/core": "0.18.6",
        "astro": "4.7.1",
        "auth-astro": "4.1.1",
        "drizzle-orm": "0.30.10",
        "typescript": "5.4.5"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "4.20240502.0",
        "@types/better-sqlite3": "7.6.10",
        "@types/node": "20.12.10",
        "better-sqlite3": "9.6.0",
        "cross-env": "7.0.3",
        "drizzle-kit": "0.20.18",
        "tsx": "4.9.3",
        "wrangler": "3.55.0"
    }
}
